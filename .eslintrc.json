{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }],
    "no-console": "off",
    "no-undef": "warn"
  },
  "globals": {
    "navigator": "readonly",
    "MediaRecorder": "readonly",
    "WebSocket": "readonly",
    "URL": "readonly",
    "Blob": "readonly"
  }
}

